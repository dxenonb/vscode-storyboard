{
	"compilerOptions": {
		"module": "esnext",
		"target": "es6",
		"outDir": "../media",
		"lib": [
            "es6",
            "dom"
		],
		"sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
		"noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
	},
	"exclude": [
		"node_modules",
	]
}
